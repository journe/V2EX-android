<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

  <ImageView
      android:id="@+id/main_user_avatar_iv"
      android:layout_width="52dp"
      android:layout_height="52dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="72dp"
      app:layout_constraintBottom_toTopOf="@+id/main_user_name_tv"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher_round"
      />

  <TextView
      android:id="@+id/main_user_name_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/nav_header_vertical_spacing"
      android:text="点击登录"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      app:layout_constraintEnd_toEndOf="@+id/main_user_avatar_iv"
      app:layout_constraintStart_toStartOf="@+id/main_user_avatar_iv"
      app:layout_constraintTop_toBottomOf="@+id/main_user_avatar_iv"
      />


</androidx.constraintlayout.widget.ConstraintLayout>
