<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

  <TextView
      android:id="@+id/topic_title_item_tv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:maxLines="2"
      android:textAppearance="?attr/textAppearanceListItem"
      android:textSize="14sp"
      android:transitionName="header_title"
      app:layout_constraintBottom_toTopOf="@+id/guideline2"
      app:layout_constraintEnd_toStartOf="@+id/topic_replies_item_tv"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@tools:sample/lorem/random"
      />

  <TextView
      android:id="@+id/topic_replies_item_tv"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/shape_backround_reply_count"
      android:gravity="center"
      android:maxLines="1"
      android:textColor="@color/white"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="999"
      />

  <TextView
      android:id="@+id/topic_node_item_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:textColor="#00a296"
      android:textSize="13sp"
      app:layout_constraintStart_toStartOf="@+id/topic_title_item_tv"
      app:layout_constraintTop_toTopOf="@+id/guideline2"
      tools:text="全球工单系统"
      />

  <TextView
      android:id="@+id/topic_reply_time_item_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="56dp"
      android:gravity="end"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline2"
      tools:text="15分钟前"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_end="24dp"
      />

  <ImageView
      android:id="@+id/topic_corner_star_iv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/corner_star"
      tools:visibility="visible"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
